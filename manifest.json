{
  "name": "Analytics & Ad Blocker: Open Source Privacy Firewall",
  "description": "An extension for privacy and security for the internet.",
  "version": "4.0.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/16x16.png",
      "32": "assets/images/32x32.png",
      "48": "assets/images/48x48.png",
      "128": "assets/images/128x128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "cookies"
  ],
  "icons": {
    "16": "assets/images/16x16.png",
    "32": "assets/images/32x32.png",
    "48": "assets/images/48x48.png",
    "128": "assets/images/128x128.png"
  },
  "optional_host_permissions": ["*://*/*", "<all_urls>"]
}
